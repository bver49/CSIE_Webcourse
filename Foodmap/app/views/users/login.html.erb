<div class="container" >
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_tag "create_login_session" do %>
				<%= label_tag "信箱" %>
				<%= text_field_tag :email ,params[:email], :class =>"form-control"  %>
				<%= label_tag "密碼" %>
				<%= password_field_tag :password, params[:password], :class =>"form-control"  %><br>
				<%= submit_tag "登錄", :class =>"btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>