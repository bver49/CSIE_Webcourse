<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">信件標題: <%= @msg.title %></h3>
			  </div>
			  <div class="panel-body">
			    <%= @msg.body %>
			  </div>
			</div>
			<div class="btn-group" role="group">
				 <%= link_to '回信', new_msg_path(:receive => @msg.user.email ,:title => @msg.title),:class => "btn btn-default"  %> 
				<%= link_to '返回', msgs_path ,:class => "btn btn-default"  %>
			</div>
		</div>
	</div>
</div>
