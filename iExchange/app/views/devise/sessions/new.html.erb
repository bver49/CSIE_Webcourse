<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2 class="text-center">登入</h2><br/>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => { :class => 'form-horizontal' }) do |f| %>
  				<div><%= f.label '帳號(E-mail)' %><br />
  				<%= f.email_field :email, autofocus: true  , :class =>"form-control" %></div><br/>
  				<div><%= f.label '密碼' %><br/>
    			<%= f.password_field :password, autocomplete: "off"  , :class =>"form-control" %></div><br/>
  				<% if devise_mapping.rememberable? -%>
    				<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br/>
  				<% end -%>

 				<div><%= f.submit "登入" ,:class =>'btn btn-default' %></div><br/>
			<% end %>
			<h5><%= link_to "用fb登入", user_omniauth_authorize_path(:facebook) %></h5>
			<h5>
				還沒有帳號?&emsp;&emsp;&emsp;馬上<%= link_to "辦一個", new_registration_path(resource_name) %>
			</h5>
		</div>
	</div>
</div>
